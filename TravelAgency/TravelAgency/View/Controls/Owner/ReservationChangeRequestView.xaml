<Page x:Class="TravelAgency.View.Controls.Owner.ReservationChangeRequestView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelAgency.View.Controls.Owner"
      mc:Ignorable="d" 
      d:DesignHeight="690" d:DesignWidth="430"
      Title="ReservationChangeRequestView">

    <Grid Background="White">
        <Label Content="List Of Requests" HorizontalAlignment="Left" Margin="26,21,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="138"/>
        <ListView x:Name="RequestListView" d:ItemsSource="{d:SampleData ItemCount=3}" ItemsSource="{Binding ReservationRequestSourceCollection}" SelectedItem="{Binding SelectedRequest}" Margin="26,50,22,498" SelectionChanged="RequestListView_SelectionChanged" FontSize="12">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding ReservationId}"
                        Header="Reservation ID" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding AccommodationId}"
                        Header="Accommodation" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding UserId}"
                        Header="Guest" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Old Start Date" HorizontalAlignment="Left" Margin="40,266,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lblOldStartDate" DataContext="{Binding SelectedItem, ElementName=RequestListView}" Content="{Binding OldStartDate}" HorizontalAlignment="Left" Margin="40,293,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="New Start Date" HorizontalAlignment="Left" Margin="222,266,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lblNewStartDate" DataContext="{Binding SelectedItem, ElementName=RequestListView}" Content="{Binding NewStartDate}" HorizontalAlignment="Left" Margin="222,293,0,0" VerticalAlignment="Top" FontSize="14" Width="108"/>
        <Label Content="-&gt;" HorizontalAlignment="Left" Margin="171,266,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label Content="Old End Date" HorizontalAlignment="Left" Margin="40,361,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lblOldEndDate" DataContext="{Binding SelectedItem, ElementName=RequestListView}" Content="{Binding OldEndDate}" HorizontalAlignment="Left" Margin="40,388,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="New End Date" HorizontalAlignment="Left" Margin="222,361,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lblNewEndDate" DataContext="{Binding SelectedItem, ElementName=RequestListView}" Content="{Binding NewEndDate}" HorizontalAlignment="Left" Margin="222,388,0,0" VerticalAlignment="Top" FontSize="14" Width="108"/>
        <Label Content="-&gt;" HorizontalAlignment="Left" Margin="171,361,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="btnAccept" Content="Accept" HorizontalAlignment="Left" Margin="45,510,0,0" VerticalAlignment="Top" Click="btnAccept_Click"/>
        <Button x:Name="btnReject" Content="Reject" HorizontalAlignment="Left" Margin="45,547,0,0" VerticalAlignment="Top" Width="75" Click="btnReject_Click"/>
        <Label Content="Selected Reservation ID" HorizontalAlignment="Left" Margin="45,479,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lblReservationId" DataContext="{Binding SelectedItem, ElementName=RequestListView}" Content="{Binding ReservationId}" HorizontalAlignment="Left" Margin="225,479,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="txtRejection" HorizontalAlignment="Left" Margin="127,554,0,0" TextWrapping="Wrap" Text="Reason for rejection" VerticalAlignment="Top" Width="240"/>
        <Label Content="Selected Accommodation ID" HorizontalAlignment="Left" Margin="45,456,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lblAccommodation" DataContext="{Binding SelectedItem, ElementName=RequestListView}" Content="{Binding AccommodationId}" HorizontalAlignment="Left" Margin="259,456,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label x:Name="lblAvailable" Content="Is available" HorizontalAlignment="Left" Margin="45,620,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>

    </Grid>
</Page>
