<Window
    x:Class="TravelAgency.View.Controls.Guide.CreateTour"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Sign In"
    Width="1280"
    Height="720"
    AllowsTransparency="True"
    Background="Transparent"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">


    <materialDesign:Card
        Margin="25"
        materialDesign:ElevationAssist.Elevation="Dp4"
        Background="{DynamicResource MaterialDesignPaper}"
        UniformCornerRadius="15">
        <materialDesign:DialogHost x:Name="DialogHost" CloseOnClickAway="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!--  Navigation  -->
                    <ColumnDefinition Width="250" />

                    <!--  Content  -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Navigation menu  -->
                <Border Grid.Column="0" CornerRadius="10, 0, 0, 10">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.3, 0.3" EndPoint="1, 1">
                            <GradientStop Offset="0" Color="#4fc3f7" />
                            <GradientStop Offset="1" Color="#68cbf8" />

                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <!--  Logo  -->
                        <StackPanel
                            Height="35"
                            Margin="15,25,0,40"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="#f3f3f3"
                                Text="Travel Agency" />
                        </StackPanel>

                        <!--  Options  -->
                        <RadioButton
                            Click="Home_OnClick"
                            Foreground="#fffafa"
                            Style="{StaticResource MenuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Foreground="#fffafa"
                                    Icon="Home"
                                    Style="{StaticResource MenuButtonIcon}" />
                                <TextBlock Style="{StaticResource MenuButtonText}" Text="Home" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton
                            Click="CreateTour_OnClick"
                            Foreground="#fffafa"
                            Style="{StaticResource MenuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Foreground="#fffafa"
                                    Icon="Bus"
                                    Style="{StaticResource MenuButtonIcon}" />
                                <TextBlock Style="{StaticResource MenuButtonText}" Text="New Tour" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton
                            Click="MonitorTour_OnClick"
                            Foreground="#fffafa"
                            Style="{StaticResource MenuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Foreground="#fffafa"
                                    Icon="Calendar"
                                    Style="{StaticResource MenuButtonIcon}" />
                                <TextBlock Style="{StaticResource MenuButtonText}" Text="Monitor Tour" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton
                            Click="ActiveTour_OnClick"
                            Foreground="#fffafa"
                            Style="{StaticResource MenuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Foreground="#fffafa"
                                    Icon="Plane"
                                    Style="{StaticResource MenuButtonIcon}" />
                                <TextBlock Style="{StaticResource MenuButtonText}" Text="Active Tour" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton
                            Click="Logout_OnClick"
                            Foreground="#fffafa"
                            Style="{StaticResource MenuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Foreground="#fffafa"
                                    Icon="Running"
                                    Style="{StaticResource MenuButtonIcon}" />
                                <TextBlock Style="{StaticResource MenuButtonText}" Text="Logout" />
                            </StackPanel>
                        </RadioButton>

                    </StackPanel>
                </Border>

                <!--  Main menu  -->
                <Border Grid.Column="1" CornerRadius="0, 10, 10, 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1, 1" EndPoint="0, 0">
                            <GradientStop Offset="0" Color="#ffffff" />
                            <GradientStop Offset="1" Color="#e6f6fe" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition Height="35" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel
                            x:Name="PanelControlBar"
                            Grid.Row="0"
                            Margin="0,0,7,0"
                            Background="Transparent"
                            FlowDirection="RightToLeft"
                            MouseEnter="PanelControlBar_MouseEnter"
                            MouseLeftButtonDown="PanelControlBar_MouseLeftButtonDown"
                            Orientation="Horizontal">

                            <Button
                                x:Name="CloseButton"
                                Width="20"
                                Height="25"
                                Click="Button_CloseClick"
                                Style="{StaticResource ControlButton}">
                                <fa:IconImage Icon="Xmark" Style="{StaticResource ControlButtonIcon}" />
                            </Button>
                            <Button
                                x:Name="MaximizeButton"
                                Width="20"
                                Height="25"
                                Click="Button_MaximizeClick"
                                Style="{StaticResource ControlButton}">
                                <fa:IconImage Icon="Maximize" Style="{StaticResource ControlButtonIcon}" />
                            </Button>
                            <Button
                                x:Name="MinimizeButton"
                                Width="20"
                                Height="25"
                                Click="Button_MinimizeClick"
                                Style="{StaticResource ControlButton}">
                                <fa:IconImage Icon="Minimize" Style="{StaticResource ControlButtonIcon}" />
                            </Button>

                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <fa:IconImage
                                    Width="20"
                                    Height="20"
                                    Margin="35,0,10,0"
                                    Foreground="#4fc3f7"
                                    Icon="Pen" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="#4fc3f7"
                                    Text="Create Tour" />

                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FlowDirection="RightToLeft"
                                Orientation="Horizontal">
                                <Button Style="{StaticResource IconButton}">
                                    <fa:IconImage Icon="AngleDown" />
                                </Button>

                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontFamily="Montserrat"
                                    FontSize="12"
                                    Foreground="#68cbf8"
                                    Text="{Binding CurrentUserAccount.DisplayName}" />

                                <Ellipse
                                    Width="35"
                                    Height="35"
                                    Margin="10,0,10,0"
                                    Stroke="#68cbf8"
                                    StrokeThickness="2">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Resources/Images/user.png" />
                                    </Ellipse.Fill>
                                </Ellipse>

                            </StackPanel>

                        </Grid>

                        <Grid Grid.Row="2" Margin="25">
                            <ScrollViewer>
                                <StackPanel
                                    Width="250"
                                    Margin="0,0,0,0"
                                    Orientation="Vertical">
                                    <TextBlock
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        Text="Tour Name"
                                        TextWrapping="Wrap" />
                                    <TextBox
                                        x:Name="NameText"
                                        Height="28"
                                        Margin="0,5,0,0"
                                        VerticalContentAlignment="Center"
                                        BorderThickness="0,0,0,1"
                                        CaretBrush="#4fc3f7"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8" />
                                    <TextBlock
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        Text="Location"
                                        TextWrapping="Wrap" />
                                    <ComboBox
                                        x:Name="ComboBoxLocation"
                                        Height="28"
                                        Margin="0,5,0,0"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0,0,0,1"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8">
                                        <ComboBoxItem>Tokyo</ComboBoxItem>
                                        <ComboBoxItem>Delhi</ComboBoxItem>
                                        <ComboBoxItem>Shanghai</ComboBoxItem>
                                        <ComboBoxItem>Sao Paulo</ComboBoxItem>
                                        <ComboBoxItem>Mexico City</ComboBoxItem>
                                        <ComboBoxItem>Cairo</ComboBoxItem>
                                        <ComboBoxItem>Mumbai</ComboBoxItem>
                                        <ComboBoxItem>Beijing</ComboBoxItem>
                                        <ComboBoxItem>Osaka</ComboBoxItem>
                                        <ComboBoxItem>New York</ComboBoxItem>
                                        <ComboBoxItem>Buenos Aires</ComboBoxItem>
                                        <ComboBoxItem>Chongqing</ComboBoxItem>
                                        <ComboBoxItem>Istanbul</ComboBoxItem>
                                        <ComboBoxItem>Kolkata</ComboBoxItem>
                                        <ComboBoxItem>Manila</ComboBoxItem>
                                        <ComboBoxItem>Bar</ComboBoxItem>
                                    </ComboBox>

                                    <TextBlock
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        Text="Description"
                                        TextWrapping="Wrap" />
                                    <TextBox
                                        x:Name="DescriptionText"
                                        Height="28"
                                        Margin="0,5,0,0"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0,0,0,1"
                                        CaretBrush="#4fc3f7"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8" />
                                    <TextBlock
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        Text="Language"
                                        TextWrapping="Wrap" />
                                    <ComboBox
                                        x:Name="ComboBoxLanguage"
                                        Height="28"
                                        Margin="0,5,0,0"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0,0,0,1"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8">
                                        <ComboBoxItem>English</ComboBoxItem>
                                        <ComboBoxItem>Spanish</ComboBoxItem>
                                        <ComboBoxItem>French</ComboBoxItem>
                                        <ComboBoxItem>Italian</ComboBoxItem>
                                        <ComboBoxItem>Serbian</ComboBoxItem>
                                        <ComboBoxItem>Portuguese</ComboBoxItem>
                                        <ComboBoxItem>German</ComboBoxItem>
                                        <ComboBoxItem>Chinese</ComboBoxItem>
                                        <ComboBoxItem>Japanese</ComboBoxItem>
                                        <ComboBoxItem>Indian</ComboBoxItem>
                                    </ComboBox>

                                    <TextBlock
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        Text="Max. Number of Guests"
                                        TextWrapping="Wrap" />
                                    <TextBox
                                        x:Name="MaxGuestsText"
                                        Height="28"
                                        Margin="0,5,0,0"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0,0,0,1"
                                        CaretBrush="#4fc3f7"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8" />

                                    <TextBlock
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        Text="Key Points"
                                        TextWrapping="Wrap" />
                                    <ComboBox
                                        x:Name="ComboBoxKeyPoints"
                                        Height="28"
                                        Margin="0,5,0,0"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0,0,0,1"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8">
                                        <ComboBoxItem Content="Tokyo" />
                                        <ComboBoxItem Content="Delhi" />
                                        <ComboBoxItem Content="Shanghai" />
                                        <ComboBoxItem Content="Sao Paulo" />
                                        <ComboBoxItem Content="Mexico City" />
                                        <ComboBoxItem Content="Cairo" />
                                        <ComboBoxItem Content="Mumbai" />
                                        <ComboBoxItem Content="Beijing" />
                                        <ComboBoxItem Content="Osaka" />
                                        <ComboBoxItem Content="New York" />
                                        <ComboBoxItem Content="Buenos Aires" />
                                        <ComboBoxItem Content="Chongqing" />
                                        <ComboBoxItem Content="Istanbul" />
                                        <ComboBoxItem Content="Kolkata" />
                                        <ComboBoxItem Content="Manila" />
                                        <ComboBoxItem Content="Bar" />
                                    </ComboBox>
                                    <TextBlock
                                        x:Name="KeyPointsList"
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        TextWrapping="Wrap" />

                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Button
                                            Width="60"
                                            Height="16"
                                            Margin="0,0,10,0"
                                            Background="#68cbf8"
                                            Click="AddKeyPoints_OnClick"
                                            Content="Add"
                                            FontSize="6"
                                            Foreground="#ffffff" />
                                        <Button
                                            Width="60"
                                            Height="16"
                                            Background="#68cbf8"
                                            Click="DeleteKeyPoints_OnClick"
                                            Content="Clear"
                                            FontSize="6"
                                            Foreground="#ffffff" />
                                    </StackPanel>

                                    <TextBlock
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        Text="Date"
                                        TextWrapping="Wrap" />
                                    <DatePicker
                                        x:Name="DatePick"
                                        Height="28"
                                        Margin="0,5,0,0"
                                        VerticalContentAlignment="Center"
                                        BorderThickness="0,0,0,1"
                                        Foreground="#68cbf8" />

                                    <TextBlock
                                        x:Name="DateList"
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        TextWrapping="Wrap" />
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Button
                                            Width="60"
                                            Height="16"
                                            Margin="0,0,10,0"
                                            Background="#68cbf8"
                                            Click="AddNewDate_OnClick"
                                            Content="Add"
                                            FontSize="6"
                                            Foreground="#ffffff" />
                                        <Button
                                            Width="60"
                                            Height="16"
                                            Background="#68cbf8"
                                            Click="DeleteDates_OnClick"
                                            Content="Clear"
                                            FontSize="6"
                                            Foreground="#ffffff" />

                                    </StackPanel>


                                    <TextBlock
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        Text="Duration"
                                        TextWrapping="Wrap" />
                                    <TextBox
                                        x:Name="DurationText"
                                        Height="28"
                                        Margin="0,5,0,0"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0,0,0,1"
                                        CaretBrush="#4fc3f7"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8" />

                                    <TextBlock
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        Text="Images"
                                        TextWrapping="Wrap" />
                                    <TextBox
                                        x:Name="ImagesText"
                                        Height="28"
                                        Margin="0,5,0,0"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0,0,0,1"
                                        CaretBrush="#4fc3f7"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8" />
                                    <TextBlock
                                        x:Name="ImagesList"
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#68cbf8"
                                        TextWrapping="Wrap" />
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Button
                                            Width="60"
                                            Height="16"
                                            Margin="0,0,10,0"
                                            Background="#68cbf8"
                                            Click="AddImages_OnClick"
                                            Content="Add"
                                            FontSize="6"
                                            Foreground="#ffffff" />
                                        <Button
                                            Width="60"
                                            Height="16"
                                            Background="#68cbf8"
                                            Click="DeleteImages_OnClick"
                                            Content="Clear"
                                            FontSize="6"
                                            Foreground="#ffffff" />
                                    </StackPanel>


                                    <TextBlock
                                        Name="ErrorMessageText"
                                        Margin="0,15,0,0"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="DarkRed"
                                        TextWrapping="Wrap" />

                                    <Button
                                        x:Name="BtnLogin"
                                        Margin="0,5,0,0"
                                        Background="#68cbf8"
                                        BorderThickness="0"
                                        Click="Confirm_OnClick"
                                        Content="Create Tour"
                                        Cursor="Hand"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#ffffff" />
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                    </Grid>

                </Border>

            </Grid>
        </materialDesign:DialogHost>
    </materialDesign:Card>
</Window>
