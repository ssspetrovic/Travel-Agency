<Window
    x:Class="TravelAgency.View.Controls.Guide.CreateTour"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:modelView="clr-namespace:TravelAgency.ModelView"
    Title="Sign In"
    Width="1280"
    Height="720"
    AllowsTransparency="True"
    Background="Transparent"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <modelView:GuideModelView/>
    </Window.DataContext>

    <materialDesign:Card
        Margin="25"
        materialDesign:ElevationAssist.Elevation="Dp4"
        Background="{DynamicResource MaterialDesignPaper}"
        UniformCornerRadius="15">
        <materialDesign:DialogHost x:Name="DialogHost" CloseOnClickAway="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!--Navigation-->
                    <ColumnDefinition Width="250"/>

                    <!--Content-->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Navigation menu-->
                <Border CornerRadius="10, 0, 0, 10"
                        Grid.Column="0">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.3, 0.3" EndPoint="1, 1">
                            <GradientStop Color="#4fc3f7" Offset="0"/>
                            <GradientStop Color="#68cbf8" Offset="1"/>

                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <!--Logo-->
                        <StackPanel Orientation="Horizontal"
                                    Height="35"
                                    Margin="15,25,0,40"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Travel Agency"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#f3f3f3"/>
                        </StackPanel>

                        <!--Options-->
                        <RadioButton Style="{StaticResource MenuButton}"
                                     Foreground="#fffafa"
                                     Click="Home_OnClick">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Home" Style="{StaticResource MenuButtonIcon}" Foreground ="#fffafa"/>
                                <TextBlock Text="Home" Style="{StaticResource MenuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MenuButton}"
                                     Foreground="#fffafa"
                                     Click="CreateTour_OnClick">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Bus" Style="{StaticResource MenuButtonIcon}" Foreground ="#fffafa"/>
                                <TextBlock Text="New Tour" Style="{StaticResource MenuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MenuButton}"
                                     Foreground="#fffafa"
                                     Click="MonitorTour_OnClick">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Calendar" Style="{StaticResource MenuButtonIcon}" Foreground ="#fffafa"/>
                                <TextBlock Text="Monitor Tour" Style="{StaticResource MenuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MenuButton}"
                                     Foreground="#fffafa"
                                     Click="Logout_OnClick">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Running" Style="{StaticResource MenuButtonIcon}" Foreground ="#fffafa"/>
                                <TextBlock Text="Logout" Style="{StaticResource MenuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                    </StackPanel>
                </Border>

                <!--Main menu-->
                <Border CornerRadius="0, 10, 10, 0"
                        Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1, 1" EndPoint="0, 0">
                            <GradientStop Color="#ffffff" Offset="0"/>
                            <GradientStop Color="#e6f6fe" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel x:Name="PanelControlBar" 
                                    Grid.Row="0"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    Background="Transparent"
                                    Margin="0, 0, 7, 0"
                                    MouseLeftButtonDown="PanelControlBar_MouseLeftButtonDown"
                                    MouseEnter="PanelControlBar_MouseEnter">

                            <Button x:Name="CloseButton"
                                    Style="{StaticResource ControlButton}"
                                    Click="Button_CloseClick" Height="25" Width="20">
                                <fa:IconImage Icon="Xmark" Style="{StaticResource ControlButtonIcon}"/>
                            </Button>
                            <Button x:Name="MaximizeButton"
                                    Style="{StaticResource ControlButton}"
                                    Click="Button_MaximizeClick" Height="25" Width="20">
                                <fa:IconImage Icon="Maximize" Style="{StaticResource ControlButtonIcon}"/>
                            </Button>
                            <Button x:Name="MinimizeButton"
                                    Style="{StaticResource ControlButton}"
                                    Click="Button_MinimizeClick" Height="25" Width="20">
                                <fa:IconImage Icon="Minimize" Style="{StaticResource ControlButtonIcon}"/>
                            </Button>

                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <fa:IconImage Icon="Pen"
                                              Height="20"
                                              Width="20"
                                              Foreground="#4fc3f7"
                                              Margin="35, 0, 10, 0"/>
                                <TextBlock Text="Create Tour"
                                           Foreground="#4fc3f7"
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>

                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        FlowDirection="RightToLeft"
                                        VerticalAlignment="Center"
                                        Margin="0, 0, 10, 0">
                                <Button Style="{StaticResource IconButton}"
                                        Foreground="#68cbf8">
                                    <fa:IconImage Icon="AngleDown"/>
                                </Button>

                                <TextBlock Text="{Binding CurrentUserAccount.DisplayName}"
                                           Foreground="#68cbf8"
                                           FontFamily="Montserrat"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>

                                <Ellipse Height="35" Width="35"
                                         Stroke="#68cbf8"
                                         StrokeThickness="2"
                                         Margin="10,0,10,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Resources/Images/user.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                            </StackPanel>

                        </Grid>

                        <Grid Grid.Row="2"
                              Margin="25">
                            <ScrollViewer>
                                <StackPanel Width="250"
                                            Grid.Row="1"
                                            Orientation="Vertical"
                                            Margin="0, 0, 0, 0">
                                    <TextBlock Text="Tour Name"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15 0, 0"/>
                                    <TextBox x:Name="NameText"
                                             FontSize="13"
                                             FontWeight="Medium"
                                             Foreground="#68cbf8"
                                             CaretBrush="#4fc3f7"
                                             BorderThickness="0, 0, 0, 1"
                                             Height="28"
                                             VerticalContentAlignment="Center"
                                             Margin="0, 5, 0, 0">
                                    </TextBox>
                                    <TextBlock Text="Location"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <ComboBox x:Name="ComboBoxLocation"
                                             FontSize="13"
                                             FontWeight="Medium"
                                             Foreground="#68cbf8"
                                             BorderThickness="0, 0, 0, 1"
                                             Height="28"
                                             VerticalContentAlignment="Center"
                                             Margin="0, 5, 0, 0"
                                             Background="Transparent">
                                        <ComboBoxItem>Tokyo</ComboBoxItem>
                                        <ComboBoxItem>Delhi</ComboBoxItem>
                                        <ComboBoxItem>Shanghai</ComboBoxItem>
                                        <ComboBoxItem>Sao Paulo</ComboBoxItem>
                                        <ComboBoxItem>Mexico City</ComboBoxItem>
                                        <ComboBoxItem>Cairo</ComboBoxItem>
                                        <ComboBoxItem>Mumbai</ComboBoxItem>
                                        <ComboBoxItem>Beijing</ComboBoxItem>
                                        <ComboBoxItem>Osaka</ComboBoxItem>
                                        <ComboBoxItem>New York</ComboBoxItem>
                                        <ComboBoxItem>Buenos Aires</ComboBoxItem>
                                        <ComboBoxItem>Chongqing</ComboBoxItem>
                                        <ComboBoxItem>Istanbul</ComboBoxItem>
                                        <ComboBoxItem>Kolkata</ComboBoxItem>
                                        <ComboBoxItem>Manila</ComboBoxItem>
                                    </ComboBox>

                                    <TextBlock Text="Description"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <TextBox x:Name="DescriptionText"
                                             FontSize="13"
                                             FontWeight="Medium"
                                             Foreground="#68cbf8"
                                             CaretBrush="#4fc3f7"
                                             BorderThickness="0, 0, 0, 1"
                                             Height="28"
                                             VerticalContentAlignment="Center"
                                             Margin="0, 5, 0, 0"
                                             Background="Transparent"/>
                                    <TextBlock Text="Language"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <ComboBox x:Name="ComboBoxLanguage"
                                              FontSize="13"
                                              FontWeight="Medium"
                                              Foreground="#68cbf8"
                                              BorderThickness="0, 0, 0, 1"
                                              Height="28"
                                              VerticalContentAlignment="Center"
                                              Margin="0, 5, 0, 0"
                                              Background="Transparent">
                                        <ComboBoxItem>English</ComboBoxItem>
                                        <ComboBoxItem>Spanish</ComboBoxItem>
                                        <ComboBoxItem>French</ComboBoxItem>
                                        <ComboBoxItem>Italian</ComboBoxItem>
                                        <ComboBoxItem>Serbian</ComboBoxItem>
                                        <ComboBoxItem>Portuguese</ComboBoxItem>
                                        <ComboBoxItem>German</ComboBoxItem>
                                        <ComboBoxItem>Chinese</ComboBoxItem>
                                        <ComboBoxItem>Japanese</ComboBoxItem>
                                        <ComboBoxItem>Indian</ComboBoxItem>
                                    </ComboBox>

                                    <TextBlock Text="Max. Number of Guests"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <TextBox x:Name="MaxGuestsText"
                                             FontSize="13"
                                             FontWeight="Medium"
                                             Foreground="#68cbf8"
                                             CaretBrush="#4fc3f7"
                                             BorderThickness="0, 0, 0, 1"
                                             Height="28"
                                             VerticalContentAlignment="Center"
                                             Margin="0, 5, 0, 0"
                                             Background="Transparent"/>

                                    <TextBlock Text="Key Points"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <ComboBox x:Name="ComboBoxKeyPoints"
                                             FontSize="13"
                                             FontWeight="Medium"
                                             Foreground="#68cbf8"
                                             BorderThickness="0, 0, 0, 1"
                                             Height="28"
                                             VerticalContentAlignment="Center"
                                             Margin="0, 5, 0, 0"
                                             Background="Transparent">
                                        <ComboBoxItem Content="Tokyo"/>
                                        <ComboBoxItem Content="Delhi"/>
                                        <ComboBoxItem Content="Shanghai"/>
                                        <ComboBoxItem Content="Sao Paulo"/>
                                        <ComboBoxItem Content="Mexico City"/>
                                        <ComboBoxItem Content="Cairo"/>
                                        <ComboBoxItem Content="Mumbai"/>
                                        <ComboBoxItem Content="Beijing"/>
                                        <ComboBoxItem Content="Osaka"/>
                                        <ComboBoxItem Content="New York"/>
                                        <ComboBoxItem Content="Buenos Aires"/>
                                        <ComboBoxItem Content="Chongqing"/>
                                        <ComboBoxItem Content="Istanbul"/>
                                        <ComboBoxItem Content="Kolkata"/>
                                        <ComboBoxItem Content="Manila"/>
                                    </ComboBox>
                                    <TextBlock x:Name="KeyPointsList"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Button Height="16"
                                                Width="60"
                                                Content="Add"
                                                FontSize="6"
                                                Background="#68cbf8"
                                                Foreground="#ffffff"
                                                Click="AddKeyPoints_OnClick"
                                                Margin="0,0,10,0"/>
                                        <Button Height="16"
                                                Width="60"
                                                Content="Clear"
                                                FontSize="6"
                                                Background="#68cbf8"
                                                Foreground="#ffffff"
                                                Click="DeleteKeyPoints_OnClick"/>
                                    </StackPanel>

                                    <TextBlock Text="Date"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <DatePicker x:Name="DatePick"
                                                Foreground="#68cbf8"
                                                Height="28"
                                                BorderThickness="0, 0, 0, 1"
                                                VerticalContentAlignment="Center"
                                                Margin="0, 5, 0, 0">
                                    </DatePicker>

                                    <TextBlock x:Name="DateList"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Button Height="16"
                                                Width="60"
                                                Content="Add"
                                                FontSize="6"
                                                Background="#68cbf8"
                                                Foreground="#ffffff"
                                                Click="AddNewDate_OnClick"
                                                Margin="0,0,10,0"/>
                                        <Button Height="16"
                                                Width="60"
                                                Content="Clear"
                                                FontSize="6"
                                                Background="#68cbf8"
                                                Foreground="#ffffff"
                                                Click="DeleteDates_OnClick"/>

                                    </StackPanel>
                                    

                                    <TextBlock Text="Duration"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <TextBox x:Name="DurationText"
                                             FontSize="13"
                                             FontWeight="Medium"
                                             Foreground="#68cbf8"
                                             CaretBrush="#4fc3f7"
                                             BorderThickness="0, 0, 0, 1"
                                             Height="28"
                                             VerticalContentAlignment="Center"
                                             Margin="0, 5, 0, 0"
                                             Background="Transparent"/>

                                    <TextBlock Text="Images"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <TextBox x:Name="ImagesText"
                                             FontSize="13"
                                             FontWeight="Medium"
                                             Foreground="#68cbf8"
                                             CaretBrush="#4fc3f7"
                                             BorderThickness="0, 0, 0, 1"
                                             Height="28"
                                             VerticalContentAlignment="Center"
                                             Margin="0, 5, 0, 0"
                                             Background="Transparent"/>
                                    <TextBlock x:Name="ImagesList"
                                               Foreground="#68cbf8"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Button Height="16"
                                                Width="60"
                                                Content="Add"
                                                FontSize="6"
                                                Background="#68cbf8"
                                                Foreground="#ffffff"
                                                Click="AddImages_OnClick"
                                                Margin="0,0,10,0"/>
                                        <Button Height="16"
                                                Width="60"
                                                Content="Clear"
                                                FontSize="6"
                                                Background="#68cbf8"
                                                Foreground="#ffffff"
                                                Click="DeleteImages_OnClick"/>
                                    </StackPanel>
                                    

                                    <TextBlock Text="{Binding ErrorMessage}"
                                               Name="ErrorMessageText"
                                               Foreground="DarkRed"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0, 15, 0, 0"/>

                                    <Button x:Name ="BtnLogin" 
                                            Click="Confirm_OnClick"
                                            BorderThickness="0" 
                                            Content="Create Tour" 
                                            Foreground="#ffffff" 
                                            Background="#68cbf8"
                                            FontWeight="Medium"
                                            FontSize="12" 
                                            Cursor="Hand" 
                                            Margin="0,5, 0, 0">
                                    </Button>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                    </Grid>

                </Border>

            </Grid>
        </materialDesign:DialogHost>
    </materialDesign:Card>
</Window>
