<Window
    x:Class="TravelAgency.View.TouristView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TravelAgency.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TouristView"
    Width="800"
    Height="520"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <DockPanel>
        <DockPanel Height="50" DockPanel.Dock="Top">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                FontWeight="SemiBold"
                Text="Travel Agency" />
        </DockPanel>
        <Border BorderBrush="Black" BorderThickness="0.5,1">
            <DockPanel Width="200" DockPanel.Dock="Left" />
        </Border>
        <Border BorderBrush="Black" BorderThickness="0.5,1">
            <DockPanel Width="Auto" DockPanel.Dock="Right" />
        </Border>
    </DockPanel>
</Window>
